<%- include('partials/header') %>
<h1>Nodes</h1>

<p>Node:</p>
<table>
  <tr>
      <th>Id</th>
      <th>Node</th>
  </tr>
  <% if (nodes.length == 0) { %>
    <tr>
       <td colspan="2"><center>No nodes found</center></td>
    </tr>
  <% } %>
  <% for(var i=0; i<nodes.length; i++) { %>
  <tr>
      <td><%= nodes[i].id %></td>
      <td><%= nodes[i].node %></td>
  </tr>
  <% } %>
</table>

<br>
<br>

<p>Virtual Machines:</p>
<table>
  <tr>
